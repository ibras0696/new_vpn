# === Telegram Bot ===
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_ID=123456789

# === Database (по умолчанию SQLite) ===
DB_ENGINE=sqlite+aiosqlite
DB_NAME=data/bot.db

# === PostgreSQL (на будущее, если решишь перейти) ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# === Logging ===
LOG_LEVEL=INFO

# === XRAY / VLESS SETTINGS ===
XRAY_CONFIG_PATH=/etc/xray/config.json
XRAY_PORT=443
XRAY_DOMAIN=myvpn.example.com
# или none
XRAY_SECURITY=tls
# tcp / ws / grpc
XRAY_NETWORK=tcp
# включить API XRay для управления без рестарта
XRAY_API_ENABLED=true
# адрес, на котором XRay слушает API (0.0.0.0 для доступа из Docker)
XRAY_API_LISTEN=127.0.0.1
# используйте host.docker.internal внутри контейнера (compose добавляет extra_hosts)
XRAY_API_HOST=host.docker.internal
XRAY_API_PORT=10085
