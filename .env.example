# === Telegram Bot ===
# Токен бота и ID администратора можно взять в @BotFather / из вашего профиля Telegram.
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_ID=123456789

# === Database (по умолчанию SQLite) ===
# По умолчанию используется SQLite-файл в каталоге проекта.
# Для PostgreSQL см. блок ниже.
DB_ENGINE=sqlite+aiosqlite
DB_NAME=data/bot.db

# === PostgreSQL (на будущее, если решишь перейти) ===
# Раскомментируйте и используйте эти параметры при переходе на PostgreSQL.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# === Logging ===
# Уровень логирования Python (DEBUG/INFO/WARNING/ERROR).
LOG_LEVEL=INFO

# === XRAY / VLESS SETTINGS ===
# Путь к конфигу XRay, порт и домен/внешний IP, которые будут в ссылке VLESS.
# XRAY_SECURITY: "tls" при наличии сертификата, иначе "none".
XRAY_CONFIG_PATH=/etc/xray/config.json
XRAY_PORT=443
XRAY_DOMAIN=myvpn.example.com
XRAY_SECURITY=none
# Транспорт VLESS: tcp / ws / grpc.
XRAY_NETWORK=tcp
# Включаем ли управление через XRay API.
XRAY_API_ENABLED=true
# Где XRay слушает API. Для продакшена оставь 0.0.0.0 (контролируй доступ фаерволом).
# Для чисто локального запуска можно вернуть 127.0.0.1.
XRAY_API_LISTEN=0.0.0.0
# Куда боту подключаться. На сервере впиши внешний IP/домен. В локальном Docker — host.docker.internal.
XRAY_API_HOST=YOUR_SERVER_IP
XRAY_API_PORT=10085
# Тег inbound-а, куда будут добавляться клиенты (должен совпадать с конфигом XRay).
XRAY_INBOUND_TAG=vless-inbound
