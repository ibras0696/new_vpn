# === Telegram Bot ===
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_ID=123456789

# === Database (по умолчанию SQLite) ===
DB_ENGINE=sqlite+aiosqlite
DB_NAME=data/bot.db

# === PostgreSQL (на будущее, если решишь перейти) ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# === Logging ===
LOG_LEVEL=INFO

# === XRAY / VLESS SETTINGS ===
XRAY_CONFIG_PATH=/etc/xray/config.json
XRAY_PORT=443
XRAY_DOMAIN=myvpn.example.com
# или none
XRAY_SECURITY=tls
# tcp / ws / grpc
XRAY_NETWORK=tcp
# включить API XRay для управления без рестарта
XRAY_API_ENABLED=true
XRAY_API_PORT=10085
